
<h1>Edit article</h1>

<%= render 'form' %>

<h2>Add Tags</h2>

<% @tags.each do |tag| %>
    <%= link_to tag.name, controller: "tags", action: "new", id: tag.id %>

    <%= form_for tag, :url => {:controller => 'articles', :action => 'add_tag'}, method: :post, html: {   id: ""} do |f| %>
        <p>
          <%= f.label :name %><br>
          <%= f.text_area :name %>
        </p>

        <p>
          <%= f.submit %>
        </p>
    <% end %>


<% end %>

<h3>Create new tag:</h3>
<%= render 'tags/form' %>

